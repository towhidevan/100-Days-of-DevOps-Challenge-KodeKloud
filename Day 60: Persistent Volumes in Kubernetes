vi pv-datacenter.yaml
    apiVersion: v1
    kind: PersistentVolume
    metadata:
      name: pv-datacenter
    spec:
      capacity:
        storage: 5Gi
      accessModes:
        - ReadWriteOnce
      persistentVolumeReclaimPolicy: Retain
      storageClassName: manual
      hostPath:
        path: "/mnt/dba"
k apply -f pv-datacenter.yaml
k get pv
k get pv pv-datacenter -o yaml
vi pvc-datacenter.yaml
    apiVersion: v1
    kind: PersistentVolumeClaim
    metadata:
      name: pvc-datacenter
    spec:
      accessModes:
        - ReadWriteOnce
      resources:
        requests:
          storage: 2Gi
      storageClassName: manual
k apply -f pvc-datacenter.yaml
k get pvc
k get pvc pvc-datacenter -o yaml
vi pod-datacenter.yaml
    apiVersion: v1
    kind: Pod
    metadata:
      name: pod-datacenter
      labels:
         app: web-datacenter
    spec:
      volumes:
        - name: datacenter-storage
          persistentVolumeClaim:
            claimName: pvc-datacenter
      containers:
        - name: container-datacenter
          image: httpd:latest
          volumeMounts:
            - mountPath: /usr/local/apache2/htdocs
              name: datacenter-storage
k apply -f pod-datacenter.yaml
k get po
vi web-datacenter.yaml
    apiVersion: v1
    kind: Service
    metadata:
      name: web-datacenter
    spec:
      type: NodePort
      selector:
        app: web-datacenter
      ports:
        - protocol: TCP
          port: 80
          targetPort: 80
          nodePort: 30008
k apply -f web-datacenter.yaml
k get svc
