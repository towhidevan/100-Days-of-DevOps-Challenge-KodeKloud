#Login to all app servers in different terminals
#Switch to root directory
yum install mariadb-server mariadb -y (in database server)

# sudo dnf install php php-opache php-gd php-curl php-mysqlnd (on each app server)
sudo yum install -y httpd php php-mysqlnd php-fpm php-json  (on each app server)
yum install httpd -y  (on eachapp server)

systemctl enable mariadb (database server)
systemctl status  mariadb
systemctl restart mariadb
systemctl status mariadb

systemctl enable httpd php; systemctl restart httpd php;systemctl status httpd php  (on each app server)
vi /etc/httpd/conf/httpd.conf  [configure LISTEN 80 to given port number] (on each app server)
systemctl restart httpd  (on each app server)

sudo -u mysql (database server)
sudo -u root mysql
