ls /opt/
cat /opt/news.txt
k get secrets
k create secret
k create secret generic news --from-file=/opt/news.txt
k get secrets
# k run secret-xfusion --image=fedora:latest --dry-run=client -o yaml > pod.yaml
vi pod.yaml
    apiVersion: v1
    kind: Pod
    metadata:
      name: secret-xfusion
    spec:
      containers:
      - name: secret-container-xfusion
        image: fedora:latest
        command: ["sleep", "3600"]
        volumeMounts:
        - name: news-secret-volume
          mountPath: "/opt/cluster"
          readOnly: true
      volumes:
      - name: news-secret-volume
        secret:
          secretName: news
k apply -f pod.yaml
k exec -it secret-xfusion -c secret-container-xfusion -- cat /opt/cluster/news.txt
